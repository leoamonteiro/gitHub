Algoritmo "escolha"

Var
 x:inteiro
 dia:caractere


Inicio

  leia (x)
  escolha x
   caso 1
      dia<-domingo
      
  leia(x)
    escolha x
       caso 2
       dia<- segunda
   leia(x)
      escolha x
         caso 3
         dia<-terca
         
         outrocaso
         dia<-("valor invalido")
   escreval("o dia que voce perguntou e",dia)
   
   
   
Fimalgoritmo