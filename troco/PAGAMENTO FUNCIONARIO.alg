Algoritmo "pagamento funcionario"

Var
  nome:caractere
  valor,hora,quantidade:inteiro

Inicio

escreva("digite o nome do funcionario: ")
  leia(nome)

escreva("digite o valor das horas : ")
   leia(valor)
escreva("digite a quantidade de horas total: ")
leia(quantidade)
        hora<-quantidade*valor
escreval("o valor total a receber de: " ,nome, ": E",hora:8:2)

Fimalgoritmo